<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:gravity="center"
    tools:context=".view.YemekTuruFragment">


    <Button
        android:id="@+id/corba_liste_button"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="Ã‡ORBALAR"
        app:layout_constraintBottom_toTopOf="@+id/salata_liste_button"
        app:layout_constraintEnd_toStartOf="@+id/anayemek_liste_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tatli_liste_button"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_below="@+id/anayemek_liste_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="224dp"
        android:layout_toEndOf="@+id/salata_liste_button"
        android:text="TATLILAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/salata_liste_button"
        app:layout_constraintTop_toBottomOf="@+id/anayemek_liste_button" />

    <Button
        android:id="@+id/anayemek_liste_button"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/corba_liste_button"
        android:text="ANA YEMEKLER"
        app:layout_constraintBottom_toTopOf="@+id/tatli_liste_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/corba_liste_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/salata_liste_button"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_below="@+id/corba_liste_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="224dp"
        android:text="SALATALAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tatli_liste_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/corba_liste_button" />
</androidx.constraintlayout.widget.ConstraintLayout>